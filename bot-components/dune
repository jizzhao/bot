(executable
 (name test_bug)
 (modules test_bug)
 (preprocess (pps ppx_graphql))
 (preprocessor_deps (file schema.json)))

(rule
 (targets schema.json)
 (deps .graphqlconfig)
 (action
  (progn
   (run graphql get-schema)
   (run sed -i "s/\"timestamp\": \".*\"/\"timestamp\": \"\"/" %{targets})))
 (mode promote))

(rule
 (targets .graphqlconfig)
 (deps (:input .graphqlconfig.in) .github-token)
 (action
  (with-stdout-to %{targets} (run sed "s/%%TOKEN%%/%{read:.github-token}/" %{input}))))

(env
 (dev (flags :standard -w -3-9-27)))
